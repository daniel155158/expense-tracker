<div class="container mt-5">
  <div class="row d-flex flex-column align-items-center">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center fw-bold mb-3">Login</h2>
          <form>
            <div class="mb-3">
              <label for="email" class="form-label fw-bold">Email</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email">
            </div>
            <div class="mb-3">
              <label for="password" class="form-label fw-bold">Password</label>
              <input type="password" class="form-control" id="password" name="password"
                placeholder="Enter your password">
            </div>
            <div class="d-flex flex-column mt-4">
              <button type="submit" class="btn btn-info fw-bold">Login</button>
            </div>
          </form>
          <div class="mt-3 fw-bold text-center">
            <p class="card-text d-inline me-2">No account ?</p>
            <a href="/users/register" class="d-inline">Register</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>